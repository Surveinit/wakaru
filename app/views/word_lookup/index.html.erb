<h1 class="title">Wakaru</h1>

<%= form_with url: word_lookup_index_path, method: :get, local: true do |form|%>
  <span class="form-group">
    <%= form.label :word, "Enter a word:", class: "form-label" %>
    <%= form.text_field :word, placeholder: "eg: 'Rizz'", class: "form-control" %>
  </span>
  <%= form.submit"Lookup", class: "btn-lookup" %>
<% end %>

<% if @word.present? %>
  <h3>Meaning for "<%= @word %>"</h3>
  <p><%= @meaning %></p>
<% end %>
